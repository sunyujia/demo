<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="58.0dip"
                android:background="#fff5f5f5"
    >


        <ImageButton
            android:id="@+id/ib_go_buy"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shangcheng_gouwuche"
            />

        <ImageButton
            android:id="@+id/ib_go_like"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/ib_go_buy"
            android:layout_marginRight="10.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/shangcheng_wodeguanzhu"
            />

        <Button
            android:id="@+id/stock"
            android:layout_width="110.0dip"
            android:layout_height="44.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/ib_go_like"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_login_border"
            android:gravity="center"
            android:text="包邮活动"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/join_buy"
            android:layout_width="110.0dip"
            android:layout_height="44.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/btn_login_border"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="加入购物车"
            android:textColor="@color/white"
            />
</RelativeLayout>